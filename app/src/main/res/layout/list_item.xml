<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderviewurl"
        android:visibility="gone"/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ordertext"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="@string/Order"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hashtag"
                android:layout_toEndOf="@+id/ordertext"
                android:textColor="@color/AppTheme"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:text="#"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_id"
                android:layout_toEndOf="@+id/hashtag"
                android:textColor="@color/AppTheme"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placedontext"
                android:textColor="#999999"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/ordertext"
                android:text="@string/placedontext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_date"
                android:layout_toEndOf="@+id/placedontext"
                android:textColor="#999999"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/ordertext"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>