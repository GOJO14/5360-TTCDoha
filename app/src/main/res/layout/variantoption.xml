<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="40dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/variantid"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/variantimage"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/curved_border"
        android:padding="3dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:contentDescription="@string/image"
            android:src="@drawable/prod2"
            />

        <RelativeLayout
            android:id="@+id/relatveSelection"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:alpha="0.4"
                android:background="@drawable/overlay"
                android:visibility="gone" />

            <TextView
                android:id="@+id/selectedoption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="Color : black"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/selectedoption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedoption1"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="Size : 14"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/selectedoption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedoption2"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="Material : GOLD"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/tick_image"
            android:adjustViewBounds="true"
            android:alpha="0.6"
            android:visibility="gone"
            android:background="@drawable/overlay"
            android:contentDescription="@string/image"
            />
    </RelativeLayout>
</LinearLayout>
