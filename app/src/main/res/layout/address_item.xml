<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_id"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/namesection">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/firstname"
                android:text="Saif"
                android:textSize="19sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/lastname"
                android:text="Ansari"
                android:textSize="19sp"
                android:paddingStart="5dp"
                android:layout_toEndOf="@id/firstname"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="Cedcoss Technologies Pvt Ltd."
            android:layout_below="@id/namesection"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address1"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="557/199 Omnagar alambagh, near katiyar cable"
            android:layout_below="@id/company"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address2"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="557/199 Omnagar alambagh, near katiyar cable"
            android:layout_below="@id/address1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="Lucknow"
            android:layout_below="@id/address2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="UttarPradesh"
            android:layout_toEndOf="@+id/city"
            android:layout_below="@id/address2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="India"
            android:layout_below="@id/city"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pincode"
            android:layout_marginStart="3dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="-226020"
            android:layout_toEndOf="@id/country"
            android:layout_below="@id/state"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/phone"
            android:text="7897784774"
            android:textSize="17sp"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/pincode"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/edit"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_below="@id/pincode"
            android:layout_toStartOf="@id/delete"
            android:src="@drawable/edit"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/delete"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/pincode"
            android:src="@drawable/new_delete"/>
    </RelativeLayout>
</RelativeLayout>